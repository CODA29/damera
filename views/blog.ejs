<!DOCTYPE html>
<html lang="en">
    <!--Page head section-->
<%- include('layouts/header'); -%>

<body>

    <!--Page Header-->
    <%- include('layouts/navbar'); -%>

    <div class="spacer"> </div>

    <div class="blogIntro" data-aos="slide-up" data-aos-duration="2000">
        <h1> FEEDS FOR THE MIND... </h1>
        

    </div>

    <div class="post-container">
        <% for (var i = 0; i < blogposts.length; i++) { %> 
            
            <div class="post-preview" data-aos="slide-up" data-aos-duration="2000" >
                
                    <div>
                        <a href="/display/<%= blogposts[i]._id %>"><img src=" <%= blogposts[i].image %> " alt=""> </a>
                        <h2 class="post-title"><%= blogposts[i].title %></h2> 
                    </div>
                    <div>
                        

                        
                    <span> By:  <%=blogposts[i].userid.username %> 
                        - <%=blogposts[i].datePosted.toDateString() %>
                    </span>
                    
                   
                    <br><br><br>
                    
                    <a href="/display/<%= blogposts[i]._id %>">Read Post</a>
        
                    </div>
                    
            </div>

        <% } %> 
    </div>
    
    

    
    

    <div class="spacer2"> 

    <!--Page footer-->
    <%- include('layouts/footer'); -%>

    <!--Page Scripts-->
    <%- include('layouts/scripts'); -%>
    </div>

    
</body>
</html>