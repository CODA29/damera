                    </div>
                    <div>
                        

                        
                    <span> By:  <%=blogposts[i].userid.username %> 
                        - <%=blogposts[i].datePosted.toDateString() %>
                    </span>
                    
                   
                    <br><br><br>
                    
                    <p><a href="/display/<%= blogposts[i]._id %>">Read Post</a></p>
        
                    </div>
                    
            </div>

        <% } %> 
    </div>
 
